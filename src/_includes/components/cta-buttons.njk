  type="button" 
  class="fixed bottom-6 right-6 z-40 btn btn-primary w-14 h-14 rounded-full shadow-strong hover:shadow-xl transition-all duration-300 group {{ classes }}"
  data-modal-trigger="questionario"
  data-source-section="{{ sectionId }}"
  data-cta-id="{{ ctaId }}"
  data-cta-label="{{ text }}"
  onclick="window.openLeadModal('{{ sectionId }}', '{{ ctaId }}')"
  aria-label="{{ text }}">
  {% if icon === 'transformation' %}
    <svg class="w-7 h-7 transition-transform group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
    </svg>
  {% elif icon === 'heart' %}
    <svg class="w-7 h-7 transition-transform group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
    </svg>
  {% else %}
    <svg class="w-7 h-7 transition-transform group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
    </svg>
  {% endif %}
</button>
{% endmacro %}