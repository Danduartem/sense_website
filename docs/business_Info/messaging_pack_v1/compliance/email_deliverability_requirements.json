    "dns_authentication": {
      "spf_record": {
        "requirement": "Authorize MailerLite to send emails on behalf of domain",
        "record_type": "TXT",
        "hostname": "@",
        "value": "v=spf1 include:_spf.mailerlite.com ~all",
        "verification_method": "DNS_propagation_check_via_mailerlite_dashboard",
        "impact": "Prevents emails from being marked as spam due to unauthorized sending"
      },
      "dkim_signature": {
        "requirement": "Domain-based message authentication",
        "record_type": "CNAME", 
        "hostname": "ml._domainkey",
        "value": "ml._domainkey.mailerlite.com",
        "verification_method": "MailerLite_automatic_verification",
        "impact": "Improves email authentication and inbox placement rates"
      },
      "dmarc_policy": {
        "requirement": "Domain-based Message Authentication Reporting and Conformance",
        "record_type": "TXT",
        "hostname": "_dmarc",
        "value": "v=DMARC1; p=quarantine; rua=mailto:dmarc@mentoriasejalivre.com.br",
        "verification_method": "DMARC_analyzer_tool_or_mailerlite_guidance",
        "impact": "Provides additional protection against email spoofing"
      }
