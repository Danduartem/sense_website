{# CTA Button Components - Mentoria Seja Livre #}
{# Reusable button macros with consistent styling and tracking #}

{#- Primary CTA Button -#}
{% macro primaryCTA(text, sectionId = 'unknown', ctaId = 'default', classes = '') %}
<button 
  type="button" 
  class="btn btn-primary btn-lg {{ classes }} group"
  data-modal-trigger="questionario"
  data-source-section="{{ sectionId }}"
  data-cta-id="{{ ctaId }}"
  data-cta-label="{{ text }}"
  aria-describedby="cta-description-{{ ctaId }}"
  onclick="window.openLeadModal('{{ sectionId }}', '{{ ctaId }}')">
  <span class="flex items-center gap-2">
    {{ text }}
    <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
    </svg>
  </span>
</button>
{% endmacro %}

{#- Secondary CTA Button -#}
{% macro secondaryCTA(text, href = '#', sectionId = 'unknown', ctaId = 'default', classes = '', target = '_self') %}
{% if href.startsWith('#') %}
  <button 
    type="button" 
    class="btn btn-secondary btn-lg {{ classes }} group"
    data-scroll-to="{{ href }}"
    data-source-section="{{ sectionId }}"
    data-cta-id="{{ ctaId }}"
    data-cta-label="{{ text }}">
    <span class="flex items-center gap-2">
      {{ text }}
      <svg class="w-5 h-5 transition-transform group-hover:translate-y-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </span>
  </button>
{% else %}
  <a 
    href="{{ href }}"
    target="{{ target }}"
    {% if target === '_blank' %}rel="noopener noreferrer"{% endif %}
    class="btn btn-secondary btn-lg {{ classes }} group inline-flex"
    data-source-section="{{ sectionId }}"
    data-cta-id="{{ ctaId }}"
    data-cta-label="{{ text }}">
    <span class="flex items-center gap-2">
      {{ text }}
      {% if target === '_blank' %}
        <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
        </svg>
      {% else %}
        <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
        </svg>
      {% endif %}
    </span>
  </a>
{% endif %}
{% endmacro %}

{#- Ghost CTA Button -#}
{% macro ghostCTA(text, href = '#', sectionId = 'unknown', ctaId = 'default', classes = '') %}
{% if href.startsWith('#') %}
  <button 
    type="button" 
    class="btn btn-ghost btn-md {{ classes }}"
    data-scroll-to="{{ href }}"
    data-source-section="{{ sectionId }}"
    data-cta-id="{{ ctaId }}"
    data-cta-label="{{ text }}">
    {{ text }}
  </button>
{% else %}
  <a 
    href="{{ href }}"
    class="btn btn-ghost btn-md {{ classes }} inline-flex"
    data-source-section="{{ sectionId }}"
    data-cta-id="{{ ctaId }}"
    data-cta-label="{{ text }}">
    {{ text }}
  </a>
{% endif %}
{% endmacro %}

{#- CTA with Icon -#}
{% macro iconCTA(text, icon, sectionId = 'unknown', ctaId = 'default', variant = 'primary', classes = '') %}
<button 
  type="button" 
  class="btn btn-{{ variant }} btn-lg {{ classes }} group"
  data-modal-trigger="questionario"
  data-source-section="{{ sectionId }}"
  data-cta-id="{{ ctaId }}"
  data-cta-label="{{ text }}"
  onclick="window.openLeadModal('{{ sectionId }}', '{{ ctaId }}')">
  <span class="flex items-center gap-3">
    {% if icon === 'transformation' %}
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
      </svg>
    {% elif icon === 'success' %}
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
    {% elif icon === 'heart' %}
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
      </svg>
    {% elif icon === 'star' %}
      <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
      </svg>
    {% else %}
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
      </svg>
    {% endif %}
    {{ text }}
  </span>
</button>
{% endmacro %}

