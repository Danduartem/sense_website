{# Testimonial Carousel Component - Mentoria Seja Livre #}
{# Mobile-optimized social proof component with touch gestures #}

{% macro testimonialCarousel(testimonials, sectionId = 'testimonials', autoplay = true, showDots = true, classes = '') %}
<div class="testimonial-carousel {{ classes }}" 
     data-section="{{ sectionId }}"
     data-autoplay="{{ autoplay }}"
     data-testimonial-count="{{ testimonials.length }}">
  
  {# Carousel Container #}
  <div class="relative overflow-hidden rounded-xl bg-white shadow-soft">
    
    {# Testimonials Track #}
    <div class="testimonial-track flex transition-transform duration-500 ease-in-out" 
         style="transform: translateX(0%)"
         role="region"
         aria-label="Depoimentos de clientes">
      
      {% for testimonial in testimonials %}
      <div class="testimonial-slide w-full flex-shrink-0 p-8"
           data-testimonial-id="{{ testimonial.id }}"
           role="group"
           aria-label="Depoimento {{ loop.index }} de {{ testimonials.length }}">
        
        {# Before State #}
        {% if testimonial.before %}
        <div class="testimonial-stage mb-6">
          <div class="flex items-start gap-3 mb-4">
            <div class="w-8 h-8 bg-error-100 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-4 h-4 text-error-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </div>
            <div class="flex-1">
              <h4 class="text-sm font-semibold text-error-700 mb-1">Antes:</h4>
              <p class="text-navy-700 leading-relaxed">{{ testimonial.before }}</p>
            </div>
          </div>
        </div>
        {% endif %}
        
        {# During State #}
        {% if testimonial.during %}
        <div class="testimonial-stage mb-6">
          <div class="flex items-start gap-3 mb-4">
            <div class="w-8 h-8 bg-warning-100 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-4 h-4 text-warning-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <div class="flex-1">
              <h4 class="text-sm font-semibold text-warning-700 mb-1">Durante a Mentoria:</h4>
              <p class="text-navy-700 leading-relaxed">{{ testimonial.during }}</p>
            </div>
          </div>
        </div>
        {% endif %}
        
        {# After State #}
        {% if testimonial.after %}
        <div class="testimonial-stage mb-6">
          <div class="flex items-start gap-3 mb-4">
            <div class="w-8 h-8 bg-success-100 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-4 h-4 text-success-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <div class="flex-1">
              <h4 class="text-sm font-semibold text-success-700 mb-1">Depois:</h4>
              <p class="text-navy-700 leading-relaxed font-medium">{{ testimonial.after }}</p>
            </div>
          </div>
        </div>
        {% endif %}
        
        {# Simple testimonial (if no before/during/after) #}
        {% if testimonial.quote and not testimonial.before %}
        <div class="testimonial-content mb-6">
          <blockquote class="text-lg text-navy-700 leading-relaxed italic border-l-4 border-burgundy-200 pl-4 mb-4">
            "{{ testimonial.quote }}"
          </blockquote>
        </div>
        {% endif %}
        
        {# Author Information #}
        <div class="testimonial-author flex items-center gap-4">
          {% if testimonial.avatar %}
          <img src="{{ testimonial.avatar }}" 
               alt="{{ testimonial.name }}"
               class="w-12 h-12 rounded-full object-cover border-2 border-neutral-200"
               loading="lazy">
          {% else %}
          <div class="w-12 h-12 rounded-full bg-peach-100 flex items-center justify-center border-2 border-peach-200">
            <span class="text-peach-700 font-semibold text-lg">
              {{ testimonial.name.substring(0,1) }}
            </span>
          </div>
          {% endif %}
          
          <div class="flex-1">
            <div class="font-semibold text-navy-800">{{ testimonial.name }}</div>
            <div class="text-sm text-neutral-600">{{ testimonial.business }}</div>
            {% if testimonial.location %}
            <div class="text-sm text-neutral-500">{{ testimonial.location }}</div>
            {% endif %}
          </div>
          
          {# Star Rating #}
          {% if testimonial.rating %}
          <div class="flex items-center" aria-label="Avaliação {{ testimonial.rating }} de 5 estrelas">
            {% for i in range(1, 6) %}
              {% if i <= testimonial.rating %}
                <svg class="w-5 h-5 text-gold-500" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              {% else %}
                <svg class="w-5 h-5 text-neutral-300" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              {% endif %}
            {% endfor %}
          </div>
          {% endif %}
        </div>
        
        {# Schema.org structured data #}
        <script type="application/ld+json">
        {
          "@context": "https://schema.org",
          "@type": "Review",
          "reviewBody": "{{ testimonial.quote or testimonial.after or testimonial.before }}",
          "author": {
            "@type": "Person",
            "name": "{{ testimonial.name }}"
          },
          "reviewRating": {
            "@type": "Rating",
            "ratingValue": "{{ testimonial.rating or 5 }}",
            "bestRating": "5"
          },
          "itemReviewed": {
            "@type": "Service",
            "@id": "https://mentoriasejalivre.com.br/#service",
            "name": "Mentoria Seja Livre"
          }
        }
        </script>
        
      </div>
      {% endfor %}
      
    </div>
    
    {# Navigation Arrows #}
    <button type="button" 
            class="carousel-nav carousel-prev absolute left-4 top-1/2 -translate-y-1/2 w-10 h-10 bg-white/90 hover:bg-white rounded-full shadow-md hover:shadow-lg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-burgundy-500 disabled:opacity-50 disabled:cursor-not-allowed"
            aria-label="Depoimento anterior"
            disabled>
      <svg class="w-5 h-5 text-navy-800 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    </button>
    
    <button type="button" 
            class="carousel-nav carousel-next absolute right-4 top-1/2 -translate-y-1/2 w-10 h-10 bg-white/90 hover:bg-white rounded-full shadow-md hover:shadow-lg transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-burgundy-500"
            aria-label="Próximo depoimento">
      <svg class="w-5 h-5 text-navy-800 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
    </button>
  </div>
  
  {# Dot Indicators #}
  {% if showDots and testimonials.length > 1 %}
  <div class="carousel-dots flex justify-center gap-2 mt-6" role="tablist" aria-label="Navegação de depoimentos">
    {% for testimonial in testimonials %}
    <button type="button" 
            class="dot w-3 h-3 rounded-full transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-burgundy-500 {{ 'bg-burgundy-700' if loop.first else 'bg-neutral-300 hover:bg-neutral-400' }}"
            role="tab"
            aria-label="Ver depoimento {{ loop.index }}"
            aria-selected="{{ 'true' if loop.first else 'false' }}"
            data-slide="{{ loop.index0 }}">
    </button>
    {% endfor %}
  </div>
  {% endif %}
  
</div>

{# Include carousel JavaScript #}
<script>
document.addEventListener('DOMContentLoaded', function() {
  // Testimonial Carousel JavaScript will be loaded from main.js
  if (window.TestimonialCarousel) {
    new window.TestimonialCarousel('.testimonial-carousel');
  }
});
</script>
{% endmacro %}

{# Simple testimonial card for use outside carousel #}
{% macro testimonialCard(testimonial, classes = '') %}
<div class="testimonial card {{ classes }}" data-testimonial="{{ testimonial.id }}">
  <div class="card-body">
    
    {# Quote or Before/After content #}
    {% if testimonial.quote %}
    <blockquote class="testimonial-content text-navy-700 leading-relaxed italic mb-6">
      "{{ testimonial.quote }}"
    </blockquote>
    {% endif %}
    
    {# Before/During/After states for transformation stories #}
    {% if testimonial.before or testimonial.during or testimonial.after %}
    <div class="transformation-story space-y-4 mb-6">
      {% if testimonial.before %}
      <div class="transformation-stage">
        <h4 class="text-sm font-semibold text-error-700 mb-2 flex items-center gap-2">
          <div class="w-4 h-4 bg-error-100 rounded-full flex items-center justify-center">
            <svg class="w-2 h-2 text-error-600" fill="currentColor" viewBox="0 0 8 8">
              <circle cx="4" cy="4" r="2"/>
            </svg>
          </div>
          Antes:
        </h4>
        <p class="text-navy-700 text-sm pl-6">{{ testimonial.before }}</p>
      </div>
      {% endif %}
      
      {% if testimonial.during %}
      <div class="transformation-stage">
        <h4 class="text-sm font-semibold text-warning-700 mb-2 flex items-center gap-2">
          <div class="w-4 h-4 bg-warning-100 rounded-full flex items-center justify-center">
            <svg class="w-2 h-2 text-warning-600" fill="currentColor" viewBox="0 0 8 8">
              <circle cx="4" cy="4" r="2"/>
            </svg>
          </div>
          Durante:
        </h4>
        <p class="text-navy-700 text-sm pl-6">{{ testimonial.during }}</p>
      </div>
      {% endif %}
      
      {% if testimonial.after %}
      <div class="transformation-stage">
        <h4 class="text-sm font-semibold text-success-700 mb-2 flex items-center gap-2">
          <div class="w-4 h-4 bg-success-100 rounded-full flex items-center justify-center">
            <svg class="w-2 h-2 text-success-600" fill="currentColor" viewBox="0 0 8 8">
              <circle cx="4" cy="4" r="2"/>
            </svg>
          </div>
          Depois:
        </h4>
        <p class="text-navy-700 text-sm pl-6 font-medium">{{ testimonial.after }}</p>
      </div>
      {% endif %}
    </div>
    {% endif %}
    
    {# Author Info #}
    <div class="testimonial-author flex items-center gap-3">
      {% if testimonial.avatar %}
      <img src="{{ testimonial.avatar }}" 
           alt="{{ testimonial.name }}"
           class="w-10 h-10 rounded-full object-cover border-2 border-neutral-200"
           loading="lazy">
      {% else %}
      <div class="w-10 h-10 rounded-full bg-peach-100 flex items-center justify-center border-2 border-peach-200">
        <span class="text-peach-700 font-semibold">
          {{ testimonial.name.substring(0,1) }}
        </span>
      </div>
      {% endif %}
      
      <div class="flex-1 min-w-0">
        <div class="font-semibold text-navy-800 text-sm truncate">{{ testimonial.name }}</div>
        <div class="text-xs text-neutral-600 truncate">{{ testimonial.business }}</div>
      </div>
      
      {# Rating stars #}
      {% if testimonial.rating %}
      <div class="flex items-center gap-1" aria-label="Avaliação {{ testimonial.rating }} estrelas">
        {% for i in range(1, 6) %}
          <svg class="w-4 h-4 {{ 'text-gold-500' if i <= testimonial.rating else 'text-neutral-300' }}" 
               fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
          </svg>
        {% endfor %}
      </div>
      {% endif %}
    </div>
    
  </div>
</div>
{% endmacro %}